<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RelLay_tempHumi"

    tools:context="com.fese.particleremote.TempHumiActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />


    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/app_bar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Temperature: loading..."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_temperature"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Humidity: loading..."
        android:textAppearance="?android:attr/textAppearanceLarge" />


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/tempHumiChart"
            android:layout_below="@+id/tv_humidity"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="match_parent"/>





</RelativeLayout>
