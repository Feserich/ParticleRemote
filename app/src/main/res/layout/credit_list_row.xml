<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:clickable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_creditTitle"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_creditAuthor"
            android:layout_below="@id/tv_creditTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_creditLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_creditAuthor"/>

        <TextView
            android:id="@+id/tv_creditLicence"
            android:layout_below="@id/tv_creditLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>



