<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_about1"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true">



        <ImageView
            android:id="@+id/img_card_about_1"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@color/gray_very_light"
            android:scaleType="center"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_toEndOf="@id/img_card_about_1">

            <TextView
                android:id="@+id/tv_welcom_titel"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="8dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_about_version_number"
                android:layout_below="@+id/tv_welcom_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_dev_name"
                android:text="@string/by_developer_name"
                android:layout_below="@+id/tv_about_version_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>